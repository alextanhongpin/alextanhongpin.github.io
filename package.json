{
  "version": "1.0.0",
  "name": "hyperapp-pwa",
  "description": "A ready-to-deploy progressive web app starter",
  "author": "Luke Jackson (lukejacksonn@gmail.com)",
  "license": "MIT",
  "main": "src/index.js",
  "output": "build",
  "watch": {
    "static": { "patterns": "static", "extensions": "*", "quiet": true },
    "bundle": { "patterns": "src", "extensions": "*", "quiet": true },
    "server": { "patterns": "package.json", "quiet": true },
    "reload": { "patterns": "package.json", "quiet": true }
  },
  "scripts": {
    "install": "npm run build",
    "static": "ncp static build",
    "bundle": "rollup -c -i src/index.js -o build/index.js",
    "server": "http-server-spa build",
    "reload": "livereload build",
    "build": "npm run static && npm run bundle",
    "start": "npm-watch"
  },
  "devDependencies": {
    "http-server-spa": "^1.2.0",
    "livereload": "^0.6.2",
    "ncp": "^2.0.0",
    "npm-watch": "^0.1.9",
    "postcss-nested": "^2.0.2",
    "rollup": "^0.43.0",
    "rollup-plugin-buble": "^0.15.0",
    "rollup-plugin-commonjs": "^8.0.2",
    "rollup-plugin-node-resolve": "^2.0.0",
    "rollup-plugin-postcss": "^0.5.3",
    "rollup-plugin-uglify": "^1.0.1"
  },
  "dependencies": {
    "hyperapp": "^0.9.3"
  }
}
